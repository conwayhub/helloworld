//Just practicing functions in Javascript while also trying to answer the immortal question:  
//Based on my last six weeks wages, how many months would I have to save for to afford a nice new laptop?

var savings = 0;
var monthMany = 0;
var macBook = 900;
var rent = 75;
var travelExpenses = 65;
var food = 60;
var social = 60;


function month(pay){
  monthMany = monthMany + 1;
  thisMonth = savings + pay * 4 - rent - travelExpenses - food - social;
  function nationalInsurance(savings){
    var nI = thisMonth % 0.12;
  thisMonth - nI;
  nI = 0;}
  savings = thisMonth;
  console.log('You have saved: ' + savings)
lapTop();
thisMonth = 0;
}

function lapTop(){
  if (savings >= macBook) {
    console.log('Huzzah, it took: ' + monthMany + ' months to afford a laptop');}
  else {console.log('Still no laptop for you...')}
}

month(69);
month(135);
month(105);
month(58);
month(142);
month(112);
